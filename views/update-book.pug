extends layout

block content
  main
      h2 Update book: #{book.title}
      img#library-card(src='/static/images/libraryCard.jpg' alt='err')
      include validation
      form(action=`/books/${book.id}`, method="post")
        include form
        input(type="submit" value="Update Book")
      form#delete(method='post' action=`/books/${book.id}/delete` onsubmit="return confirm('Confirm that you want to delete this book');")
          input#delete-button(type="submit", value="Delete Book")
      a.button(href="/books") Back to Books